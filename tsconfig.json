{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "declaration": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "sourceMap": true,
    // "rootDir": "src",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
	  "node",
	  "@types/jest"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "webpack.*.js",
	"dist",
	"**/__tests__/*.spec.ts",
	"**/__tests__/*.spec.tsx"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
 
}
